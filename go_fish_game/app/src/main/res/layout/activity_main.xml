<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout tools:context=".MainActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ml">


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="200dp" android:text="30 rounds left" android:id="@+id/rounds_left" android:textSize="25sp"/>

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/player" android:src="@drawable/fisherman" android:background="@drawable/circle"/>

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/sunset" android:src="@drawable/sunset" android:background="@drawable/circle" android:onClick="onClick" android:layout_marginLeft="15dp"/>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/board"
    android:orientation="vertical"
    ></LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="10dp">

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/fisherman1" android:src="@drawable/paddles" android:background="@drawable/black_square" android:onClick="onClick"/>

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/fisherman2" android:src="@drawable/fishing_rod" android:background="@drawable/black_square" android:onClick="onClick"/>

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/fisherman3" android:src="@drawable/net" android:background="@drawable/black_square" android:onClick="onClick"/>

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/fisherman4" android:src="@drawable/bait" android:background="@drawable/black_square" android:onClick="onClick"/>

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/fisherman5" android:src="@drawable/repair" android:background="@drawable/black_square" android:onClick="onClick"/>

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/fisherman6" android:src="@drawable/swim" android:background="@drawable/black_square" android:onClick="onClick" android:visibility="gone"/>

    <ImageView android:layout_height="70dp" android:layout_width="70dp" android:id="@+id/fisherman7" android:src="@drawable/attak" android:background="@drawable/black_square" android:onClick="onClick" android:visibility="gone"/>

</LinearLayout>

</LinearLayout>